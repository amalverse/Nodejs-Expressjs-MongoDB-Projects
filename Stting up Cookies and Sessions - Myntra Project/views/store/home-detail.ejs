<%- include('../partials/head') %>
  </head>
  <body class="bg-gray-100">
      <%- include('../partials/nav') %>
      <main class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 max-w-6xl">
          <h2 class="text-3xl text-red-600 font-bold text-center mb-6">
              Details of <%= home.houseName %>
          </h2>
          
          <div class="flex flex-col md:flex-row gap-6">
              <div class="rounded-lg overflow-hidden w-full md:w-1/2">
                  <img src="<%= home.photoUrl %>" alt="<%= home.name %>" class="w-full h-96 object-cover rounded-lg">
              </div>
              
              <div class="w-full md:w-1/2 p-4">
                  <div class="border-b border-gray-200 pb-4 mb-4">
                      <h3 class="text-2xl font-semibold mb-2 text-gray-800">Description</h3>
                      <p class="text-gray-600"><i class="fa-solid fa-circle-info" style="color: #B197FC;"></i><%= home.description %></p>
                  </div>

                  <div class="border-b border-gray-200 pb-4 mb-4">
                      <h3 class="text-2xl font-semibold mb-2 text-gray-800">Location</h3>
                      <p class="text-gray-600"><i class="fas fa-map-marker-alt text-red-500 mr-2"></i><%= home.location %></p>
                  </div>
                  
                  <div class="border-b border-gray-200 pb-4 mb-4">
                      <h3 class="text-2xl font-semibold mb-2 text-gray-800">Price</h3>
                      <p class="text-green-600 font-medium"><i class="fa-solid fa-indian-rupee-sign" style="color: #63E6BE;"></i><%= home.price %> / night</p>
                  </div>
                  
                  <div class="border-b border-gray-200 pb-4 mb-4">
                      <h3 class="text-2xl font-semibold mb-2 text-gray-800">Rating</h3>
                      <div class="flex items-center">
                          <span class=" text-xl"><i class="fa-solid fa-star mr-2" style="color: #FFD43B;"></i></span>
                          <span class="ml-2 text-lg font-medium"><%= home.rating %> / 5</span>
                      </div>
                  </div>
                  <div class="mt-4">
                    <%- include('../partials/favourite') %>
                  </div>
              </div>
          </div>
      </main>
  </body>
</html>