<header class="bg-red-500 text-white p-4 shadow-md">
  <nav class="container mx-auto flex justify-between items-center">
    <ul class="flex space-x-4">
      <li>
        <a
          href="/"
          class="font-bold <%= currentPage === 'Index' ? 'bg-red-400 ' : 'hover:bg-red-400 ' %> py-2 px-4 rounded transition duration-300"
          >AirBnB</a
        >
      </li>
      <li>
        <a
          href="/homes"
          class="font-bold <%= currentPage === 'Home' ? 'bg-red-400 ' : 'hover:bg-red-400 ' %> py-2 px-4 rounded transition duration-300"
          >Homes-List</a
        >
      </li>
      <li>
        <a
          href="/favourites"
          class="font-bold <%= currentPage === 'favourites' ? 'bg-red-400' : 'hover:bg-red-400' %> py-2 px-4 rounded transition duration-300"
          >Favourites</a
        >
      </li>
      <li>
        <a
          href="/bookings"
          class="font-bold <%= currentPage === 'bookings' ? 'bg-red-400' : 'hover:bg-red-400' %> py-2 px-4 rounded transition duration-300"
          >Bookings</a
        >
      </li>
      <li>
        <a
          href="/host/host-home-list"
          class="font-bold <%= currentPage === 'Host-homes' ? 'bg-red-400 ' : 'hover:bg-red-400' %> py-2 px-4 rounded transition duration-300"
          >Host Homes</a
        >
      </li>
      <li>
        <a
          href="/host/add-home"
          class="font-bold <%= currentPage === 'addHome' ? 'bg-red-400 ' : 'hover:bg-red-400' %> py-2 px-4 rounded transition duration-300"
          >Add Home</a
        >
      </li>
    </ul>
    <ul class="flex space-x-4 ml-auto">
      <li>
        <% if (!isLoggedIn) { %>
          <a
            href="/login"
            class="font-bold <%= currentPage === 'Login' ? 'bg-red-400 ' : 'hover:bg-red-400' %> py-2 px-4 rounded transition duration-300"
            >Login</a
          >
        <% } else { %>
          <form action="/logout" method="POST">
            <button
              type="submit"
              class="font-bold <%= currentPage === 'Logout' ? 'bg-red-400 ' : 'hover:bg-red-400' %>  px-4 rounded transition duration-300"
              >Logout</button
            >
          </form>
        <% } %>  
      </li>
      <li>
        <a
          href="/signup"
          class="font-bold <%= currentPage === 'Register' ? 'bg-red-400 ' : 'hover:bg-red-400' %> py-2 px-4 rounded transition duration-300"
          >Register</a
        >
      </li>
    </ul>
  </nav>
</header>
