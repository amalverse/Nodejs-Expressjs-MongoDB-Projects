<%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>
    <main class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 max-w-6xl">

      <h2 class="text-3xl text-red-500 font-bold text-center mb-6">
        Hey Host! Here are you homes:
      </h2>
      <div class="flex flex-wrap justify-center gap-6">
        <% registeredHomes.forEach(home => { %> <!-- Iterates over the 'registeredHomes' array passed to the template. -->
        <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition    duration-300 w-full max-w-sm ">
          <img src="<%= home.photoUrl %>" alt="<%= home.houseName %>" class=" w-full h-48 object-cover">
          <div class="p-4">
            <h3 class="text-xl font-semibold text-gray-800 mb-2"><%= home.houseName %></h3>
            <p class="text-gray-600 mb-2"><i class="fas fa-map-marker-alt text-red-500 mr-2"></i><%= home.location %></p>
            <div class="flex justify-between items-center mb-2">
              <span class="text-lg font-bold text-red-500"><i class="fa-solid fa-indian-rupee-sign" style="color:red;"></i><%= home.price %> / Night</span>
              <div class="flex items-center">
                <span class="text-gray-700"><%= home.rating %><i class="fa-solid fa-star mr-2" style="color: #FFD43B;"></i></span>
              </div>
            </div>
            <a href="/host/edit-home/<%= home._id %>?editing=true" class="bg-blue-700 text-white p-2" >Edit</a>
            <form action="/host/delete-home/<%= home._id %>" method="POST">
              <button type="submit" class="bg-red-500 p-2">Delete</button>
            </form>
          </div>
        </div>
        <% }) %>
      </div>
    </main>
  </body>
</html>
