<% if (errors.length > 0) {%> <!-- Checks if there are any errors to display -->
  <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert"> <!-- Container for error messages with styling -->
    <strong class="font-bold">Error!</strong> <!-- Bold text indicating an error -->
    <span class="block sm:inline"> <!-- Container for the list of error messages -->
      <% errors.forEach(error => { %> <!-- Loops through each error in the errors array -->
        <li><%= error %></li> <!-- Displays each error as a list item -->
      <% }) %>
    </span>
    <span class="absolute top-0 bottom-0 right-0 px-4 py-3"> <!-- Close button container -->
      <i class="fas fa-times"></i> <!-- Icon for the close button -->
    </span>
  </div>
<% } %> <!-- Ends the if condition for displaying errors -->