<%- include('../partials/head') %>
  <style>
    .input-container {
      position: relative;
    }
    .input-icon {
      position: absolute;
      left: 0.75rem;
      top: 50%;
      transform: translateY(-50%);
      color: #9ca3af;
      pointer-events: none;
    }
    .input-field {
      padding-left: 2.5rem;
    }
  </style>
  </head>
  <body class="bg-gray-100">
    <%- include('../partials/nav') %>
    <main class="container mx-auto mt-8 p-8 bg-white rounded-lg shadow-md max-w-2xl">
      <h1 class="text-3xl font-bold mb-6 text-center text-gray-800 border-b pb-4">Welcome Back</h1>
      <form action="/login" method="POST" class="max-w-md mx-auto">
        <%- include('../partials/errors') %>
        <div class="mb-5">
          <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
          <div class="input-container">
            <span class="input-icon">
              <i class="fas fa-envelope"></i>
            </span>
            <input
              type="email"
              id="email"
              name="email"
              value="<%= oldInput.email ? oldInput.email : '' %>"
              placeholder="your.email@example.com"
              class="input-field w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500 transition"
              required />
          </div>
        </div>
        <div class="mb-6">
          <div class="flex items-center justify-between mb-1">
            <label for="password" class="block text-sm font-medium text-gray-700">Password</label>
          </div>
          <div class="input-container">
            <span class="input-icon">
              <i class="fas fa-lock"></i>
            </span>
             <input
              type="password"
              id="password"
              name="password"
              placeholder="Enter Your Password"
              class="input-field w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500 transition"
              required/>
          </div>
        </div>
        <button type="submit" class="w-full bg-red-500 text-white py-2 rounded-md hover:bg-red-600 transition duration-300">
          <span>Sign In</span>
          <i class="fas fa-sign-in-alt ml-2"></i>
        </button>
        <p class="text-center mt-6 text-gray-600">
          Don't have an account yet? <a href="/signup" class="text-red-500 hover:underline">Sign up</a>
        </p>
      </form>
    </main>
  </body>
</html>